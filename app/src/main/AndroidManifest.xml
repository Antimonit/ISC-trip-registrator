<?xml version="1.0" encoding="utf-8"?>
<manifest
	package="cz.cvut.isc.tripregistrator"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.CAMERA" />

	<application
		android:name="cz.cvut.isc.tripregistrator.App"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme">

		<meta-data
			android:name="preloaded_fonts"
			android:resource="@array/preloaded_fonts"
			/>

		<activity
			android:name="cz.cvut.isc.tripregistrator.screen.main.MainActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>

		<activity android:name="cz.cvut.isc.tripregistrator.screen.scan.ScannerActivity"/>

	</application>

</manifest>
